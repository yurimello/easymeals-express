extends ../layout

block content
  .w3-row-padding.w3-padding-16.w3-center#food
    for recipe in recipes
      .w3-quarter
        a(href="/recipes/#{recipe._id}")
          img(src="#{recipe.image}" alt="Sandwich") 
          h3= recipe.name
          p Just some random text, lorem ipsum text praesent tincidunt ipsum lipsum
  
  //- Pagination
  .w3-center.w3-padding-32
    ul.w3-pagination
      if page > 1
        li 
          a.w3-hover-black(href="/recipes?page=1") «
      - for(i = pageRange.firstPage; i <= pageRange.lastPage; i++)
        li
          if i == page 
            a.w3-black(href="#")= i
          else
            a.w3-hover-black(href="/recipes?page=#{i}")= i
      if page < pages
        li
          a.w3-hover-black(href="/recipes?page=#{pages}") »
      
        
  hr#about

  //- About Section
  .w3-container.w3-padding-32.w3-center
    h3 Next Section
