extends ../layout

block content
  .w3-container
    .w3-threequarter
      .w3-border
        img(src="#{receipe.image}" alt="#{receipe.name}") 
        .w3-cointainer.w3-center
          p= receipe.name
          if userId
            a(href="/users/#{userId}/bookmarks/#{receipe._id}") Bookmark
      .receipe-steps
        .w3-half.ingredients
          .w3-border
            header.w3-container
              h1 Ingredients
            .w3-container
              ul
                for ingredient in receipe.ingredients
                  li= ingredient.text  

        .w3-half
          .w3-border
            header.w3-container
              h1 instructions
            .w3-container
              ol
                for instruction in receipe.instructions
                  li= instruction.text  
